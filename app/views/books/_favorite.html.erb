<% if book.favorite_by?(current_user) %>
            <td>
              
              <%= link_to book_favorite_path(book),method: :delete do %>
              <span class="text-danger">♥
              <%= book.favorite.count %>
              </span>
              <% end %>
            </td>
            
            <% else %>
            
            <td>
              <%= link_to book_favorite_path(book),method: :post do %>
              ♡
              <%= book.favorite.count %>
              <% end %>
            </td>
            <% end %>